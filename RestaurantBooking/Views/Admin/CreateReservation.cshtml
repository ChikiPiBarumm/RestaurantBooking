@using RestaurantBooking.ViewModels
@model ReservationViewModel

<h2>Create Reservation</h2>

<form asp-action="CreateReservation" method="post">
    <div class="form-group">
        <label asp-for="SelectedRestaurantID"></label>
        <select asp-for="SelectedRestaurantID" class="form-control" asp-items="@(new SelectList(ViewBag.Restaurants, "ID", "Name"))"></select>
        <span asp-validation-for="SelectedRestaurantID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectedDate"></label>
        <input asp-for="SelectedDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="SelectedDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfPeople"></label>
        <input asp-for="NumberOfPeople" class="form-control" />
        <span asp-validation-for="NumberOfPeople" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>