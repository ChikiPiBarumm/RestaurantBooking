@{
    ViewData["Title"] = "Admin Panel";
}

<h2>@ViewData["Title"]</h2>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title">Manage Users</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Create, edit, or delete users in the system.</p>
                    <a class="btn btn-primary" asp-controller="Admin" asp-action="ManageUsers">Manage Users</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title">Manage Restaurants</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Add, edit, or remove restaurants from the system.</p>
                    <a class="btn btn-primary" asp-controller="Admin" asp-action="ManageRestaurants">Manage Restaurants</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title">Manage Reservations</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">View and manage reservations made by users.</p>
                    <a class="btn btn-primary" asp-controller="Admin" asp-action="ManageReservations">Manage Reservations</a>
                </div>
            </div>
        </div>
    </div>
</div>