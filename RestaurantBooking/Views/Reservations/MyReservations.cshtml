@model IEnumerable<RestaurantBooking.Models.Reservation>

@{
    ViewData["Title"] = "My Reservations";
}

<h2 class="mb-4">My Reservations</h2>

<div class="form-check form-switch mb-4">
    <input class="form-check-input" type="checkbox" id="showCancelled" name="showCancelled" value="true"
    @(ViewData["ShowCancelled"] != null && (bool)ViewData["ShowCancelled"] ? "checked" : "")
           onchange="toggleShowCancelled(this.checked)">
    <label class="form-check-label" for="showCancelled">Show Cancelled Reservations</label>
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Restaurant</th>
            <th>Date</th>
            <th>Number of People</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var reservation in Model)
            {
                <tr>
                    <td>@reservation.Restaurant.Name</td>
                    <td>@reservation.Date.ToString("f")</td>
                    <td>@reservation.NumberOfPeople</td>
                    <td>
                        <span class="badge @(reservation.Status switch {
                            "Pending" => "bg-warning text-dark",
                            "Confirmed" => "bg-success",
                            "Cancelled" => "bg-danger",
                            _ => "bg-secondary"
                        })">
                            @reservation.Status
                        </span>
                    </td>
                    <td>
                        @if (reservation.Status != "Cancelled")
                        {
                            <form method="post" asp-action="Cancel" asp-controller="Reservations" class="d-inline">
                                <input type="hidden" name="reservationId" value="@reservation.ID" />
                                <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                            </form>
                            <form method="get" asp-action="Edit" asp-controller="Reservations" class="d-inline">
                                <input type="hidden" name="reservationId" value="@reservation.ID" />
                                <button type="submit" class="btn btn-sm btn-primary">Edit</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No reservations found.</td>
            </tr>
        }
    </tbody>
</table>

<script>
    function toggleShowCancelled(isChecked) {
        window.location.href = '@Url.Action("MyReservations", "Reservations")' + '?showCancelled=' + isChecked;
    }
</script>
